---
import { getCollection } from "astro:content";

const eventos = await getCollection("events", ({ data }) => {
    return data;
});
---

<h1
    class="text-4xl md:text-7xl font-title-bold text-secondary-dark text-center mb-12"
>
    Proximos Eventos
</h1>
<main
    class="grid grid-cols-2 auto-rows-[150px] gap-3 animate-fade-in animate-delay-150
            sm:auto-rows-[180px] md:grid-cols-4 md:auto-rows-[200px] md:gap-4 lg:auto-rows-[220px]"
>
    <!-- Celda 1 (Doble altura) - Destacado -->
    <a
        class="group relative col-span-2 row-span-2 bg-amber-100/80 rounded-2xl md:rounded-3xl
              border border-amber-200 overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div
            class="absolute inset-0 flex flex-col justify-center items-center gap-3 p-4"
        >
            <img
                class="w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 object-cover rounded-lg"
                src="/Listo.webp"
                alt="Ícono"
            />
            <h1
                class="text-2xl sm:text-3xl md:text-4xl font-medium text-amber-900"
            >
                Principal
            </h1>
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-br from-transparent to-amber-100/30 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <!-- Celda 2 (Normal) -->
    <a
        class="group relative bg-blue-100/80 rounded-2xl md:rounded-3xl border border-blue-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div class="h-full flex justify-between items-center p-4">
            <h2
                class="text-lg sm:text-xl md:text-2xl font-medium text-blue-900"
            >
                Acción
            </h2>
            <img
                class="w-12 h-12 sm:w-14 sm:h-14 object-contain"
                src="/Listo.webp"
                alt="Ícono"
            />
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-tr from-transparent to-blue-100/20 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <!-- Celda 3 (Normal) -->
    <a
        class="group relative bg-green-100/80 rounded-2xl md:rounded-3xl border border-green-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div class="h-full flex flex-col justify-center items-center gap-2 p-3">
            <img
                class="w-10 h-10 sm:w-12 sm:h-12 object-contain"
                src="/Listo.webp"
                alt="Ícono"
            />
            <h2
                class="text-base sm:text-lg md:text-xl font-medium text-green-900"
            >
                Opción
            </h2>
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-t from-transparent to-green-100/20 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <!-- Celda 4 (Doble ancho en móvil) -->
    <a
        class="group relative col-span-2 bg-purple-100/80 rounded-2xl md:rounded-3xl border border-purple-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div class="h-full flex justify-around items-center px-6">
            <h2
                class="text-xl sm:text-2xl md:text-3xl font-medium text-purple-900"
            >
                Destacado
            </h2>
            <img
                class="w-14 h-14 sm:w-16 sm:h-16 object-contain"
                src="/Listo.webp"
                alt="Ícono"
            />
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-l from-transparent to-purple-100/20 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <a
        class="group relative bg-red-100/80 rounded-2xl md:rounded-3xl border border-red-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div class="h-full flex justify-center items-center p-4">
            <h2 class="text-lg sm:text-xl md:text-2xl font-medium text-red-900">
                Urgente
            </h2>
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-r from-transparent to-red-100/20 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <a
        class="group relative row-span-1 bg-emerald-100/80 rounded-2xl md:rounded-3xl border border-emerald-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div
            class="absolute inset-0 flex flex-col justify-end items-center p-6"
        >
            <img
                class="w-24 h-24 sm:w-28 sm:h-28 md:w-32 md:h-32 object-contain"
                src="/Listo.webp"
                alt="Ícono"
            />
            <h2
                class="text-xl sm:text-2xl md:text-3xl font-medium text-emerald-900 mt-4"
            >
                Nuevo
            </h2>
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-b from-transparent to-emerald-100/30 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>

    <!-- Celda 7 (Doble ancho) -->
    <a
        class="group relative col-span-2 bg-indigo-100/80 rounded-2xl md:rounded-3xl border border-indigo-200
              overflow-hidden shadow-sm hover:shadow-md transition-all"
    >
        <div class="h-full flex justify-between items-center px-8">
            <h2
                class="text-xl sm:text-2xl md:text-3xl font-medium text-indigo-900"
            >
                Premium
            </h2>
            <img
                class="w-16 h-16 sm:w-20 sm:h-20 object-contain"
                src="/Listo.webp"
                alt="Ícono"
            />
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-r from-transparent to-indigo-100/20 opacity-0
                    group-hover:opacity-100 transition-opacity"
        >
        </div>
    </a>
</main>
