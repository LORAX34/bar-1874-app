---
import ErrorLayout from "@/layouts/ErrorLayout.astro";
import Estructura from "@/components/ui/Estructura.astro";
---

<ErrorLayout>
    <Estructura>
        <div class="flex flex-col justify-center w-full items-center mb-4">
            <div
                class="relative group w-48 md:w-64 lg:w-80 animate-blurred-fade-in animate-delay-150"
                style="mask-image: url('/Listo.webp'); mask-size: contain; mask-repeat: no-repeat;"
            >
                <img
                    class="w-full h-full object-contain pointer-events-none"
                    src="/Listo.webp"
                    alt="Bar 1874 Logo"
                />
                <div
                    class="absolute inset-0 -translate-x-full bg-[length:200%_100%] bg-gradient-to-r from-transparent via-white/40 to-transparent transition-transform duration-400 ease-in-out group-hover:translate-x-full"
                >
                </div>
            </div>

            <div
                class="space-y-6 flex justify-center items-center flex-col animate-fade-in animate-delay-150"
            >
                <h1 class="text-5xl md:text-6xl font-title-bold text-cuarto">
                    404
                </h1>
                <h2 class="text-3xl md:text-4xl font-title-medium text-cuarto">
                    PÃ¡gina no encontrada
                </h2>
                <a
                    href="/Home"
                    class="inline-block px-8 py-3 bg-primary-medium hover:bg-primary-ligth text-secondary-medium hover:text-secondary-light rounded-full transition-colors duration-300 font-medium text-lg hover:animate-pop"
                >
                    Volver al inicio
                </a>
            </div>
        </div>
    </Estructura>
</ErrorLayout>
